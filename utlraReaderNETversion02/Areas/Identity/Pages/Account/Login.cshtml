@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="email@example.com" />
                            <label asp-for="Input.Email">E-posta</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Şifre" />
                            <label asp-for="Input.Password">Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Beni hatırla
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">Giriş Yap</button>
                    </form>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p><a asp-page="./ForgotPassword">Şifrenizi mi unuttunuz?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Yeni kullanıcı olarak kayıt ol</a></p>
                        <p><a asp-page="./ResendEmailConfirmation">E-posta doğrulamasını tekrar gönder</a></p>
                    </div>

                    @if (Model.ExternalLogins?.Count > 0)
                    {
                        <hr class="my-4" />
                        <div class="text-center">
                            <p class="mb-3">Diğer servislerle giriş yap</p>
                            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-outline-dark w-100 mb-2" name="provider" value="@provider.Name">
                                        @provider.DisplayName ile giriş yap
                                    </button>
                                }
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
