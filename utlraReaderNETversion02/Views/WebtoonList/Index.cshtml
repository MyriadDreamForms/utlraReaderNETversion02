@model List<utlraReaderNETversion02.ViewModels.WebtoonListItemViewModel>

@{
    ViewData["Title"] = "Webtoon Listesi";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Webtoon Listesi</h1>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    @* Kapak görseli *@
                    <img src="@Url.Content($"~/webtoons/{item.Name}/{item.Info.Cover}")"
                         alt="@item.Info.Title"
                         class="card-img-top"
                         style="object-fit: cover; height: 200px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Info.Title</h5>
                        <p class="card-text">
                            @if (!string.IsNullOrEmpty(item.Info.Description) && item.Info.Description.Length > 80)
                            {
                                @item.Info.Description.Substring(0, 80)

                                @("...")
                            }
                            else
                            {
                                @item.Info.Description
                            }
                        </p>
                        <a href="@Url.Action("Details", "WebtoonList", new { name = item.Name })" class="btn btn-primary mt-auto">
                            Detayları Gör
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
