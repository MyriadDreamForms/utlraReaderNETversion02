@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Webtoon>

<div class="container mt-5">
    <h1 class="mb-4 text-white">Webtoonlar</h1>

    <div class="row">
        @foreach (var webtoon in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card bg-secondary text-white shadow-sm border-0 h-100">
                    <img src="~/webtoons/@webtoon.Name/@webtoon.Cover"
                         onerror="this.onerror=null;this.src='@Url.Content("~/images/default-cover.jpg")';"
                         class="card-img-top"
                         alt="@webtoon.DisplayName"
                         style="max-height: 190px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@webtoon.DisplayName</h5>
                        <p class="card-text flex-grow-1">@webtoon.Description</p>
                        <a href="@Url.Action("Details", "Webtoon", new { name = webtoon.Name })"
                           class="btn btn-light mt-auto">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
