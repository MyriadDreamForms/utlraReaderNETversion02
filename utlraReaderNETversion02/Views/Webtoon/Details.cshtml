@model WebtoonInfo
@{
    // Webtoon adı, controller tarafından ViewData["WebtoonName"] ile gönderiliyor.
    var webtoonName = ViewData["WebtoonName"] as string;
    var chapters = ViewData["Chapters"] as List<string>;
    ViewData["Title"] = Model.Title;
    Layout = "_Layout";
}

<div class="container mt-4">
    <!-- TempData Mesajları -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <!-- Webtoon Bilgi Bölümü -->
    <div class="row mb-5">
        <!-- Sol: Kapak Görseli -->
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.Cover))
            {
                <img src="@Url.Content($"~/webtoons/{webtoonName}/{Model.Cover}")"
                     class="img-fluid rounded shadow" alt="Kapak Görseli" style="max-height: 400px;" />
            }
            else
            {
                <img src="@Url.Content("~/images/default-cover.jpg")"
                     class="img-fluid rounded shadow" alt="Varsayılan Kapak" style="max-height: 400px;" />
            }
        </div>
        <!-- Sağ: Webtoon Bilgileri ve İşlem Butonları -->
        <div class="col-md-8 d-flex flex-column justify-content-center">
            <h2 class="mb-2">@Model.Title</h2>
            <p class="text-muted">@Model.Description</p>
            <div class="d-flex gap-2">
                <a href="@Url.Action("Edit", "Webtoon", new { name = webtoonName })" class="btn btn-warning">
                    ✏️ Düzenle
                </a>
                <a href="@Url.Action("AddChapter", "Webtoon", new { name = webtoonName })" class="btn btn-primary">
                    ➕ Yeni Bölüm Ekle
                </a>
            </div>
        </div>
    </div>

    <hr />

    <!-- Bölüm Listesi -->
    <h4 class="mb-3">Bölümler</h4>
    @if (chapters?.Count > 0)
    {
        <div class="list-group">
            @foreach (var chapter in chapters)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <strong>@chapter</strong>
                    <div class="d-flex gap-2 mt-2 mt-sm-0">
                        <!-- Kullanıcı giriş yaptıysa "Oku" butonunu göster, değilse uyarı mesajı göster -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Index", "Reader", new { webtoon = webtoonName, chapter = chapter })"
                               class="btn btn-sm btn-primary">📖 Oku</a>
                        }
                        else
                        {
                            <span class="btn btn-sm btn-secondary disabled">Okumak için giriş yapın</span>
                        }

                        <a href="@Url.Action("EditChapter", "Webtoon", new { webtoon = webtoonName, chapter = chapter })"
                           class="btn btn-sm btn-warning">✏️ Düzenle</a>

                        <form method="post" asp-action="DeleteChapter" asp-controller="Webtoon" class="d-inline"
                              asp-route-webtoon="@webtoonName" asp-route-chapter="@chapter"
                              onsubmit="return confirm('@chapter bölümünü silmek istediğinize emin misiniz?');">
                            <button type="submit" class="btn btn-sm btn-danger">🗑️ Sil</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3">Henüz bölüm eklenmemiş.</div>
    }
</div>
