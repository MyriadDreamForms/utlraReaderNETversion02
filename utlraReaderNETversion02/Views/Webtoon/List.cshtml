@model List<Webtoon>

<h2>Webtoon Listesi</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var w in Model)
        {
            <tr>
                <td>@w.DisplayName</td>
                <td>
                    <a href="@Url.Action("Details", "Webtoon", new { name = w.Name })" class="btn btn-sm btn-primary">Detay</a>
                    <a href="@Url.Action("Edit", "Webtoon", new { name = w.Name })" class="btn btn-sm btn-warning">Düzenle</a>

                    <form method="post" asp-action="Delete" asp-controller="Webtoon" asp-route-name="@w.Name" class="d-inline"
                          onsubmit="return confirm('Webtoon tamamen silinecek. Emin misiniz?');">
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
