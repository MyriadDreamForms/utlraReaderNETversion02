<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ultraReader</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <header class="bg-dark text-white p-3 mb-4">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0"><a href="/" class="text-white text-decoration-none">📚 ultraReader</a></h1>
            <nav>
                <a href="/" class="text-white me-3">Anasayfa</a>
                <a href="/Webtoon/List" class="text-white">Webtoonlar</a>
            </nav>
        </div>
    </header>

    <main class="container mb-5">
        @RenderBody()
    </main>

    <footer class="mt-auto bg-light text-center py-3">
        <small>&copy; @DateTime.Now.Year ultraReader • Offline Webtoon Okuyucu</small>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
