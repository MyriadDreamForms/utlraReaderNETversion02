@using utlraReaderNETversion02.Models.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Admin Girişi";
    Layout = "_Layout";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="mb-4">Admin Girişi</h2>

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger" />
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Şifre</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
    </form>
</div>
